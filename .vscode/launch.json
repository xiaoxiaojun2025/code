    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Debug with GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\bin\\gdb.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "externalConsole": true, 
            "internalConsoleOptions": "neverOpen",
            "MIMode": "gdb",  // 明确指定调试模式为 GDB
            "miDebuggerPath": "D:\\download\\mingw64\\bin\\gdb.exe",  // 指定 GDB 的完整路径
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "将反汇编风格设置为 Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}